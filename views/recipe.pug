extends layout

block content
  .container
    .row
      .col-md-6
        h1 #{recipe.title}
      .col-md-6
        h3 #{recipe.category}
    .row
      .col-md-3
        p Take Note:
      .col-md-9
        p #{recipe.body}
    .row
      .col-md-3
        p Ingredients:
      .col-md-9
        ol
          each ingredient in recipe.ingredients
            li #{ingredient}
    .row
      .col-md-3
        p Steps:
      .col-md-9
        ol
          each step in recipe.steps
            li #{step}
    .row
      .col-md-3
        p Author:
      .col-md-9
        p #{recipe.author}
    .row
      .col-md-3
        p Comments
      .col-md-9
        //each comment in recipe.comments
        //  p #{comment.comment_body}
        //  p #{comment.comment_author}
        //   Link to author page with author id
      a.btn.btn-submit.add-comment(id="add-comment") Add
