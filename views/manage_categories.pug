extends layout

block content
  .container
    h1 #{title}
    table(class='table table-striped')
      tr
        th Category Title
        th Category Description
        th Actions
      each category, i in categories
        tr
          td #{category.title}
          td #{category.description}
          td
            a(class="btn btn-primary" href="/manage/categories/edit/"+category._id) Edit
            // a(class="btn btn-tiny btn-default" href='/manage/categories/delete/'+category._id) Delete
